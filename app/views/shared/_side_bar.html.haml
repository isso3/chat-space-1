.side-contents
  .side-header
    .side-header__box
      %p.side-header__box__name
        = current_user.name
      %ul.side-header__box__menu
        %li.side-header__box__user
        = link_to new_group_path do
          = icon('fas','edit', class: 'icon')
        %li.side-header__box__edit
        = link_to edit_user_path(current_user) do
          = icon('fas','cog',class: 'icon')

  .side-group
    - current_user.groups.each do |group|
      = link_to "#", class: "group" do
        %p.side-group__name
          = group.name
        %p.side-group__message
          メッセージはありません

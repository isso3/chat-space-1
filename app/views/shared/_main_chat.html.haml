.main-contents
  .main__header
    .main__header__box
      .main__header__box__name
        = @group.name
      .main__header__box__member
        - @group.users.each do |user|
          = user.name
    .main__header__edit
      = link_to "Edit",edit_group_path(params[:group_id]) , metood: :get
      

  .main__messages
    = render @messages

  .main__from
    = form_for [@group, @message] do |f|
      .form__message
        .form__message__box
          = f.text_field :content, class:"form__message__box__input" , placeholder: "type a message"
          = f.label :image, class: "form__message__box__image" do
            = icon('fas','image')
            = f.file_field :image ,class: "form__message__box__image--file"
        = f.submit "Send", class: "form__message__submit"
.main-contents
  .main__header
    .main__header__box
      .main__header__box__name
        = @group.name
      .main__header__box__member
        = current_user.name
    .main__header__edit
      = link_to "Edit" edit_group_path do

  .main__messages 
    = render @messages
    .main__message
      .main__message__box
        .main__message__box--username
          ユーザーネーム
        .main__message__box--time
          2020/2/22/(Wed)21:00:00
      .main__message__text
        .main__message__text__content
          おはよう

  .main__from
    = form_for [@group, @message] do |f|
      .form__message
        .form__message__box
          = f.text_field :content, class:"form__message__box__input" , placeholder: "type a message"
          = f.label "label", class: "form__message__box__image" do
            = icon('fas','image')
            = f.file_field "file",class: "form__message__box__image--file"
        = f.submit "Send", class: "form__message__submit"